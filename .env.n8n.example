# n8n Automation - Environment Configuration
# Copy to .env.n8n and fill in values:
#   cp .env.n8n.example .env.n8n

# === n8n Core ===
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=forge-admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD

N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_SECURE_COOKIE=false

# Execution data retention (days)
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=168

# Disable telemetry
N8N_DIAGNOSTICS_ENABLED=false
N8N_VERSION_NOTIFICATIONS_ENABLED=false

# === Webhook Secrets (one per workflow) ===
# Generate each with: openssl rand -hex 32
WEBHOOK_SECRET_CI_FAILURE=GENERATE_WITH_openssl_rand_hex_32
WEBHOOK_SECRET_SECURITY_ADVISORY=GENERATE_WITH_openssl_rand_hex_32
WEBHOOK_SECRET_RELEASE_NOTIFIER=GENERATE_WITH_openssl_rand_hex_32
WEBHOOK_SECRET_STALE_PR=GENERATE_WITH_openssl_rand_hex_32
WEBHOOK_SECRET_VELOCITY_REPORT=GENERATE_WITH_openssl_rand_hex_32
WEBHOOK_SECRET_DOCKER_HEALTH=GENERATE_WITH_openssl_rand_hex_32

# === GitHub Integration (read-only token) ===
GITHUB_TOKEN=ghp_CHANGE_ME
GITHUB_ORG=LucasSantana-Dev

# === Slack Integration ===
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/CHANGE_ME
SLACK_CHANNEL_QUALITY=#forge-quality
SLACK_CHANNEL_RELEASES=#forge-releases
SLACK_CHANNEL_METRICS=#forge-metrics
SLACK_CHANNEL_OPS=#forge-ops
